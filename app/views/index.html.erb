<link rel="stylesheet" href="simple_first.css">
<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simplism</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
       <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:400,700,900&display=swap" rel="stylesheet">
  </head>

  <header>
    <div class="sight_name"> 
      <b>
        <%= link_to "Simplism", class: :sight_name%>
      </b>
      <div class='lists-right'>
        <li><%= link_to 'ログイン', class: "login" %></li>
        <li><%= link_to '新規登録', class: "sign-up" %></li>
      </div> 
    </div>

     <div class="sight_sub_name"> 
      <%= link_to "MySize ASSIST", class: :size%>
      <li><%= link_to 'カテゴリー', class: :category %></li>
      <li><%= link_to 'ブランド', class: :brand %></li> 
    </div>     

    <div class="top">
      <%= link_to image_tag("top.png", class: :logo), root_path %> 
    </div>  
      
  </header>   
  <%= yield %>  
</html>